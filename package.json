{
  "name": "server-manager",
  "version": "1.0.0",
  "description": "A web application for managing servers",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "start": "bun run start:backend",
    "start:backend": "turbo run start --filter=backend",
    "start:ui": "turbo run preview --filter=ui",
    "preview": "turbo run preview --filter=ui",
    "dev:shared": "turbo run dev --filter=@server-manager/shared",
    "dev:backend": "turbo run dev --filter=backend",
    "dev:ui": "turbo run dev --filter=ui",
    "dev": "turbo run dev",
    "clean": "find . -name node_modules -o -name dist -o -name pnpm-lock.yaml -o -name bun.lockb -print0 | xargs -0 rm -rf"
  },
  "author": "bernoussama",
  "license": "GPL-3.0-only",
  "packageManager": "bun@1.1.30",
  "devDependencies": {
    "@types/node": "^22.15.21",
    "concurrently": "^9.1.2",
    "esbuild-fix-imports-plugin": "^1.0.21",
    "tsup": "^8.5.0",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "server",
    "manager",
    "ui",
    "linux",
    "server-manager",
    "server-manager-ui",
    "devops",
    "server-management",
    "server-monitoring",
    "server-administration",
    "server-management-ui",
    "administration",
    "management",
    "monitoring",
    "administration",
    "management",
    "monitoring",
    "administration",
    "management",
    "monitoring"
  ]
}